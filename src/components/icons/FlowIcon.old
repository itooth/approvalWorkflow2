  <div class="flow-icon-box" :style="boxStyle">
    <span class="flowiconfont" :style="fontStyle" v-html="props.icon"> </span>
  </div>
</template>

<script setup>
import { ref, computed } from "vue";

let props = defineProps({
  icon: {
    type: String,
    default: "",
  },
  size: {
    type: Number,
    default: 16,
  },
  bg: {
    type: String,
    default: "#FFF",
  },
});

let boxStyle = computed(() => {
  return {
    width: props.size + "px",
    height: props.size + "px",
    lineHeight: props.size + "px",
    backgroundColor: props.bg,
  };
});

let fontStyle = ref({
  fontSize: props.size * 0.6 + "px",
});
</script>

